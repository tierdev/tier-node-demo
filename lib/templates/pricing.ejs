<%- include('./header.include.ejs') %>

<% if (plan) { %>
<p>Current Plan: <%= plan %></p>
<% } %>

<table border=1 cellpadding=10>
<tr><%
for (const plan of plans) {
  %>
  <th>
    <h2><%= plan.id %></h2>
    <p><%= plan.title %></p>
  </th>
  <%
}
%></tr>

<tr><%
// show the features for each plan.
for (const plan of plans) {
  %>
  <td style="vertical-align:top">
  <%
  for (const [fid, feature] of Object.entries(plan.features)) {
    if (!feature.tiers || !feature.tiers.length) {
      continue
    }
    %>
    <h3><%= fid %></h3>
    <%
    for (let i = 0; i < feature.tiers.length; i ++) {
      const {price, base, upto} = feature.tiers[i]
      %>
      <pre><%-
      JSON.stringify({
        price: dollar(price),
        base: dollar(base),
        upto: upto > Number.MAX_SAFE_INTEGER ? 'Infinity' : upto,
      }, null, 2)
      %></pre>
      <%
    }
  }
  %>
  </td>
  <%
}
%>
</tr>

<tr>
<%
for (const p of plans) {
  %>
  <td>
  <%
  if (p.id === plan) {
    %>Current Plan<%
  } else {
    %>
    <form action="/plan" method="post">
      <input type="hidden" name="plan" value="<%= p.id %>">
      <input type="submit" value="Choose this plan">
    </form>
    <%
  }
  %>
  </td>
  <%
}
%>
</tr>

</table>

<script>
document.body.addEventListener('submit', async e => {
  e.preventDefault()
  const form = e.target
  const url = form.action
  const formData = new FormData(form)
  const res = await fetch(form.action, {
    method: 'POST',
    headers: {
      'content-type': 'application/x-www-form-urlencoded',
    },
    body: `plan=${formData.get('plan')}`,
  })
  location.reload()
})
</script>
